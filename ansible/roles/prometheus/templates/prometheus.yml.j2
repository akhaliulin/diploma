global:
 scrape_interval: 15s

scrape_configs:
 - job_name: 'Prometheus'
   scrape_interval: 5s
   static_configs:
    - targets: ['localhost:9090']

 - job_name: 'Nodes'
   scrape_interval: 5s
   static_configs:
    - targets:
       - '{{ nginx1_private_ip }}:9100'
       - '{{ nginx2_private_ip }}:9100'

 - job_name: 'Nginx'
   scrape_interval: 5s
   static_configs:
    - targets:
       - '{{ nginx1_private_ip }}:9113'
       - '{{ nginx2_private_ip }}:9113'
